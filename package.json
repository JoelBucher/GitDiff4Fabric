{
  "name": "gitdiff4fabric",
  "displayName": "GitDiff4Fabric",
  "description": "Minimal VS Code extension that lets you diff Fabric workspaces.",
  "version": "0.2.1",
  "publisher": "JoelBucher",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/JoelBucher/GitDiff4Fabric"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:git-diff-4-fabric.login"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "git-diff-4-fabric.download",
        "title": "GitDiff4Fabric: Download Workspace"
      },
      {
        "command": "git-diff-4-fabric.refreshWorkspaces",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "git-diff-4-fabric.selectWorkspace",
        "title": "Select Workspace"
      },
      {
        "command": "git-diff-4-fabric.checkoutHead",
        "title": "Checkout Fabric Workspace HEAD"
      },
      {
        "command": "git-diff-4-fabric.refreshGitStatus",
        "title": "Refresh Fabric Status",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "workspace-explorer",
          "title": "Workspaces",
          "icon": "$(graph)"
        }
      ]
    },
    "views": {
      "workspace-explorer": [
        {
          "id": "workspaces",
          "name": "Workspaces"
        },
        {
          "id": "workspaceGitStatus",
          "name": "Fabric Git Status",
          "when": "workspaceselected"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "git-diff-4-fabric.refreshWorkspaces",
          "when": "view == workspaces",
          "group": "navigation"
        },
        {
          "command": "git-diff-4-fabric.refreshGitStatus",
          "when": "view == workspaceGitStatus",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@types/node-fetch": "^2.6.13",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.7.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  }
}
