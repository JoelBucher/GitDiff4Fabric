{
  "compilerOptions": {
    "target": "ES2020",                     // Modern JS target
    "module": "CommonJS",                   // VS Code expects CommonJS
    "lib": ["ES2020"],                      // Standard JS library
    "outDir": "out",                        // Compiled JS goes here
    "rootDir": "src",                        // Source TS files location
    "strict": true,                          // Enable all strict type checks
    "esModuleInterop": true,                 // Allows importing node-fetch
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                    // Speeds up compilation
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,                       // Useful for debugging
    "inlineSources": true
  },
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}
